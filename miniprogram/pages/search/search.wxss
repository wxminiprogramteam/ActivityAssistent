/* pages/search/search.wxss */
.header{
  position: fixed;
  width: 100%;
  height: 132rpx;
  background-color: #2be2d0;
}
.search{
  width: 90%;
  border: 1px solid white;
  border-radius: 30rpx;
  background-color: white;
  padding: 5rpx 10rpx;
  margin: 30rpx auto;
}
.main-scroll{
  width: 100%;
  position: fixed;
  top: 132rpx;
  height: calc(100% - 132rpx);
}
.main{
  min-height: calc(100% - 132rpx);
}

.main-item{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ddd;
  color: #999;
  padding: 10rpx 30rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}
.main-item-img{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}