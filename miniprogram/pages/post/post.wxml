<view class="container">
  <image class="post-head-image  {{isloading == true ? 'skeleton':''}}" src="{{post.post_img}}"></image>
  <text class="post-title  {{isloading == true ? 'skeleton':''}}">{{post.title}}</text>
  <view class="post-info">
    <view class="post-info-organizer">
      <image class="post-info-organizer-img  {{isloading == true ? 'skeleton':''}}" src="{{post.organizer_img}}"></image>
      <text class="post-info-organizer-name  {{isloading == true ? 'skeleton':''}}">{{post.organizer}}</text>
    </view>
    <view class="post-info-time  {{isloading == true ? 'skeleton':''}}">
      <text>活动时间: {{post.activity_time}}</text>
    </view>
    <view class="post-info-place  {{isloading == true ? 'skeleton':''}}">
      <text>活动地点: {{post.place}}</text>
    </view>
  </view>
  <text class="detail  {{isloading == true ? 'skeleton':''}}">{{post.detail}}</text>
</view>
<view class="tool">
  <view class="tool-item" catchtap="onUpTap" data-post-id="{{post._id}}">
     <image animation="{{animationUp}}" wx:if="{{post.up_status}}" src="/images/icon/wx_app_liked.png" />
     <image animation="{{animationUp}}" wx:else src="/images/icon/wx_app_like.png" />
    <text  class="{{isloading == true ? 'skeleton':''}}">{{post.up_num}}</text>
  </view>
  <view class="tool-item comment" catchtap="onCommentTap" data-post-id="{{post._id}}">
    <image src="/images/icon/wx_app_message.png"></image>
    <text class="{{isloading == true ? 'skeleton':''}}">{{post.comment_num}}</text>
  </view>
  <view class="tool-item" catchtap="onCollectionTap" data-post-id="{{post._id}}">
    <image wx:if="{{post.collection_status}}" src="/images/icon/wx_app_collected.png" />
    <image wx:else src="/images/icon/wx_app_collect.png" />
    <text class="{{isloading == true ? 'skeleton':''}}">{{post.collection_num}}</text>
  </view>
</view>
